<h2>ジャンル一覧・追加</h2>

<%= form_with model:genre,local:true do |f| %>
 <%= f.label :ジャンル名 %>
 <%= f.text_field :name %>
 <% f.submit '新規登録'　%>
<table>
 <thead>
   <tr>
    <th>ジャンル</th>
    <th></th>
   </tr>
 </thead>
 <tbody>
   <% genres.each do |genre| %>
    <tr>
    <td><%= genre.name %></td>
    <td><%= link_to '編集する', edit_genre_path(@genre) %></td>
    </tr>
 </tbody>
</table>