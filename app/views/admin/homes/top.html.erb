<div class="container">
  <div class="row">
    <div class="col-11">
      <h2>注文履歴一覧</h2>

    <div class="row-lg-10">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @admin_customers.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order) %></td>
              <td><%= order.last_name + "　" + order.first_name %></td>
            　<!--エラーが出るので一旦、コメントアウトしてます！-->
              <td><%#= order.order_details.sum(:amount) %></td>
              <td><%#= order.order_status %></td>
            </tr>
            <% end %>
            <%#= paginate @orders %>
        </tbody>
      </table>
    </div>
  </div>
</div>