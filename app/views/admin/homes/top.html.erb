<%= flash[:notice] %>

<div class="container">
  <div class="row">
    <div class="col-11">
      <h2>注文履歴一覧</h2>

    <div class="row-lg-10">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <!--<th>注文ステータス</th>-->
          </tr>
        </thead>


        <tbody>
          <% @orders.each do |order| %>
          <% @sum = 0 %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order) %></td>
              <td><%= order.customer.last_name + "　" + order.customer.first_name %></td>
            　<!--エラーが出るので一旦、コメントアウトしてます！-->
            　<% order.order_details.each do |f| %>
              <%#= order.order_details.sum(:amount) %>
              <% @sum += f.amount %>
              <% end %>
              <td><%= @sum %></td>
              <td><%#= order.status %></td>
            </tr>
            <% end %>



             <td><%= paginate @orders %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>