<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

  <table class="table">
    <tbody>
      <tr>
        <td>商品画像</td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name %> </td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price %>円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td><%= f.radio_button :is_active, true %>販売中　<%= f.radio_button :is_active, :false %>販売停止中</td>
      </tr>
    </tbody>
  </table>
  <div class="actions">
  <%= f.submit "変更を保存" %>
  </div>
<% end %>


