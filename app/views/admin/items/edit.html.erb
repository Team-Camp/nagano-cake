<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row-lg-10">
    <h1>商品編集</h1>
    <div class="col-10 offset-md-1">
<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

  <table class="table">
    <tbody>
      <tr>
        <td>商品画像</td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name,size:"40" %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction ,class:'form-controll',size:"40x7"%></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name%> </td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price,size:"40" %>円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td><%= f.radio_button :is_active, true %>販売中　<%= f.radio_button :is_active, :false %>販売停止中</td>
      </tr>
    </tbody>
  </table>


<div class="col text-center">
  <%= f.submit "　変更を保存　",class:"btn btn-success center-block"  %>
</div>
<% end %>

      </div>
  </div>
</div>
