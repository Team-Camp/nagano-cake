<%= flash[:notice] %>
<div class="container">
  <div class ="row">
    <h1>注文履歴確認</h1>
  </div>

  <div class ="row">
    <div class ="col-md-8 mb-5">
      <table class="table table-borderless ">
        <tbody>
          <tr>
            <td class="font-weight-bold">購入者</td>
            <td><%= @order.customer.last_name %>　<%= @order.customer.first_name %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">注文日</td>
            <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">配送先</td>
            <td><%= @order.postal_code %> <%= @order.address %><br><%= @order.name %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">注文ステータス</td>
            <td>
              <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
                <%= f.select :status, Order.statuses_i18n.invert,{},{}  %>
                <%= f.submit "更新",class:"btn btn-success" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class ="row">
    <div class ="col-md-9">
      <%= render 'admin/order_details/order_detail', order: @order %>
    </div>

    <div class ="col-md-3 d-flex align-items-end">
      <%= render 'admin/order_details/order_detail_sum', order: @order %>
    </div>
  </div>
</div>