<%= flash[:notice] %>

<h1>注文情報確認</h1>

<table class="table">
  <tbody>
    <tr>
      <td>購入者</td>
      <td><%= @order.customer.last_name %>　<%= @order.customer.first_name %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.updated_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= @order.address %></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <td>
        <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
          <%= f.select :status, Order.statuses.keys,{},{}  %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

