<h5>管理者ログイン</h5>
<%= render "admin/shared/error_messages", resource: resource %>
 <table class="table">
  <tbody>
   <tr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
    <p><div><%= f.label :メールアドレス %></div></p>
    <p><div><%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "sample@example.com" %></div></p>
    <p><div><%= f.label :パスワード %></div></p>
    <p><div><%= f.password_field :password, autocomplete: "current-password" %></div></p>
    </div>
   </tr>
  </tbody>
 </table>

  <%# if devise_mapping.rememberable? %>
    <%# <div class="field">
      <%= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <%#</div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

