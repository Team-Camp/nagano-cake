<h3>管理者ログイン</h3>
<%= render "admin/shared/error_messages", resource: resource %>
 <table class="table">
  <tbody>
   <tr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "sample@example.com" %>
    </div>

    <div class="field">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
   </tr>
  </tbody>
 </table>

  <%# if devise_mapping.rememberable? %>
    <%# <div class="field">
      <%= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <%#</div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-info btn-sm btn-block mb-3 sign_in" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
