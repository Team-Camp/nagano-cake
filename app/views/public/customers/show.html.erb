<h1>マイページ</h1>

<p>登録情報</p>
<p><%= link_to "編集する",information_edit_path, class:"btn btn-sm btn-success" %></p>

<table border="1">
  <tr>
    <th>氏名</th>
    <th><%= @customer.last_name +"  "+ @customer.first_name %></th>
  </tr>
  <tr>
    <td>カナ</td>
    <td><%= @customer.last_name_kana +"  "+ @customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%=  @customer.telephone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.postal_code %></td>
  </tr>
</table>


