<div class="container">
<div class="row">
<div class="col-md-8 offset-md-3">
<h3 style="margin: 20px 0;">新着商品</h3>
<div class="row">
 <% @items.each do |item| %>
 <div class="col-md-3">
     <%= link_to item_path(item) do %>
     <%= image_tag item.image, size:"150x150" %>
     <div><%= item.name %></div>
     <% end %>
    <div>¥<%= item.price.to_s(:delimited) %></div>
    </div>
    <% end %>
</div>
</div>
</div>
</div>

<div class="text-right">
<%= link_to "全ての商品を見る> ", items_path %>
</div>
