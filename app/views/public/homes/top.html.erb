
<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <!--ジャンル検索-->
      <%= render 'public/items/genrevar', genres: @genres %>
    </div>
   </div>
 </div>

<div>ようこそながのCAKEへ！</div>
