<!--ジャンル検索-->
<strong>ジャンル検索</strong>

<tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= link_to genre.name, public_items_path(genre_id: genre.id), class: "text-secondary" %>
      </td>
    </tr>
    <% end %>
</tbody>



<!--一覧部分-->
<p>
  商品一覧(全<%= @items.count %>件)
</p> <br>
<% @items.each do |item| %>
  <p><%= image_tag item.image, size:"200x200" %></p>
  <p><%= link_to item.name, public_item_path(item)%></p>
  <p><%= item.price %>円</p>
<% end %>

