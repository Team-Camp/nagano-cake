<h4>注文情報確認</h4>

<table>
   <th>商品名</th>
   <th>単価(税込)</th>
   <th>数量</th></th>
   <th>小計</th>
   <tr>
    <% total = 0 %>
     <% @cart_items.each do |cart_item| %> 
      <tr>
        <td>
           <%= attachment_image_tag(cart_item.item, :image, size: "70x50", fallback: "noimage.png") %>
           <%= cart_item.item.name %>
        </td>
        <td><%= (cart_item.item.price*1.08).to_i %></td>
        <td><%= cart_item.amount %></td>
        <td><% subtotal = ((cart_item.item.price*cart_item.amount)*1.08).to_i %></td>
        <td><%= subtotal %></td>
      </tr>
      <% total += (cart_item.item.price*cart_item.amount)*1.08 %>
     <% end %>
   </tr>
</table>

<table>
   <tr>
     <th>送料</th>
     <% @order.postage = 800 %>
     <td><%= @order.postage %></td>
   </tr>
   <tr>
     <th>商品合計</th>
     <td><%= total.to_i </td>
   </tr>
</table>