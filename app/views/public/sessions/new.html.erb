<h2>ログイン</h2>

  <h3>会員の方はこちらからログイン</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="table">
    <tbody>
      <tr>
        <tb>メールアドレス</tb>
        <tb><%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "sample@example.com" %></tb>
      </tr>
      <tr>
        <tb>パスワード</tb>
        <tb><%= f.password_field :password, autocomplete: "current-password" %></tb>
      </tr>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

  <h3>会員登録がお済みでない方</h3>
  <p><%= render "public/shared/links" %>から新規登録を行ってください。</p>
